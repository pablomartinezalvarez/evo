{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "experimentalDecorators": true,
    "target": "es5",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "src/custom-types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}